<Window x:Class="Expense_Tracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expense_Tracker.Views"
        xmlns:vm="clr-namespace:Expense_Tracker.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Title="Учет расходов" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Мои расходы"
                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                      VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal"
                       Margin="8,0,0,0">
                <Button Command="{Binding AddExpenseCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Добавить" 
                                 Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ToggleThemeCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="8,0,0,0">
                    <materialDesign:PackIcon Kind="ThemeLightDark"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Фильтры -->
        <Grid Grid.Row="1" Margin="0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      Margin="0,0,8,0"
                      materialDesign:HintAssist.Hint="Категория"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}"/>

            <DatePicker Grid.Column="1"
                       Margin="8,0"
                       materialDesign:HintAssist.Hint="От"
                       Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                       SelectedDate="{Binding StartDate}"/>

            <DatePicker Grid.Column="2"
                       Margin="8,0"
                       materialDesign:HintAssist.Hint="До"
                       Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                       SelectedDate="{Binding EndDate}"/>

            <Button Grid.Column="3"
                    Margin="8,0,0,0"
                    Command="{Binding ResetFiltersCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FilterRemove" 
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="Сбросить" 
                             Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Список расходов -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding FilteredExpenses}"
                  materialDesign:ScrollViewerAssist.BubbleVerticalScroll="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Margin="2" UniformCornerRadius="4">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="{Binding Description}"
                                         Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                <TextBlock Text="{Binding Category}"
                                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Opacity="0.6"/>
                                <TextBlock Text="{Binding Date, StringFormat={}{0:d MMMM yyyy}}"
                                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Opacity="0.6"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1"
                                     Text="{Binding Amount, StringFormat={}{0:C}}"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     VerticalAlignment="Center"
                                     Margin="16,0,0,0"/>
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Итоговая сумма -->
        <TextBlock Grid.Row="3"
                  Margin="0,16,0,0"
                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                  HorizontalAlignment="Right">
            <Run Text="Итого:"/>
            <Run Text="{Binding TotalAmount, StringFormat={}{0:C}}"/>
        </TextBlock>
    </Grid>
</Window>
